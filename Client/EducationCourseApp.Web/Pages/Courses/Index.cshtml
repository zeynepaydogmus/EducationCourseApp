
@{
    ViewData["Title"] = "Index";
}
@model List<EducationCourseApp.Web.Models.Catalog.CourseViewModel>

<div class="row">
    <div clas="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Kurslar </h5>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                        <th> Resim </th>
                        <th> Kurs İsim </th>
                        <th> Fiyat </th>
                        <th> Süre </th>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th></th>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Feature.Duration</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                
            </div>
        </div>
    </div>
</div>
<h2>title</h2>
